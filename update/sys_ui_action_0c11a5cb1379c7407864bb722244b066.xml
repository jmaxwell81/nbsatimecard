        <script><![CDATA[// This Recall UI Action is for Payroll
// Remark are necessary for recalling

//Client-side 'onclick' function
function verifyRemarksPayroll() {
	
	if(g_form.getValue('remarks') == '') {
		alert('Remarks are manadatory for recalling payroll approved timesheet');
		g_form.setMandatory('remarks', true);
		return false;  //Abort submission
   }
   //Call the UI Action and skip the 'onclick' function
   gsftSubmit(null, g_form.getFormElement(), 'recall_payroll'); //MUST call the 'Action name' set in this UI Action
}

//Code that runs without 'onclick'
if(typeof window == 'undefined')
   recall();

//Server-side function
function recall() {
	current.state = 'Open';
	current.update();
	action.setRedirectURL(current);
}
