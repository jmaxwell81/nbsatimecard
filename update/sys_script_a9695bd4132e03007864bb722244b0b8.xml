        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	var tu = new tenroxUtil();
	var t = new GlideRecord(tu.TABLE_NON_WORK_TIME);
	t.addQuery('timesheet', current.sys_id);
	//t.addQuery('non_work_type', 'Lunch Break');
	t.addQuery('nwt.name', 'Lunch Break');
	t.query();
	gs.debug('timesheet: {0}, t.getRowCount(): {1}, bypass_8_hr_pwd_rule_for_days: {2}', current.timesheet, t.getRowCount(), current.bypass_8_hr_pwd_rule_for_days);
	if (t.next()) {
		var lunchHours = tu.getLunchBreakToUpdate(current);
		gs.debug('Update Lunch Break for Bypass Days BR: timesheet: '+current.timesheet+', lunchHours: '+lunchHours);
		if (lunchHours && lunchHours.length == 5) {
			lunchHours.forEach(function(l) {
				t.setValue(l[0], l[1]);
			});
			t.update();
		}
	}

})(current, previous);]]></script>
